@using Microsoft.JSInterop

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Planapp</a>
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" aria-controls="navigation" aria-expanded="@navMenuExpanded" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="nav-scrollable @NavMenuCssClass" @onclick="CloseNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseNavMenu">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @* Only show Rules and App Usage on Android *@
        @if (DeviceInfo.Platform == DevicePlatform.Android)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="rules" @onclick="CloseNavMenu">
                    <span class="bi bi-rules-nav-menu" aria-hidden="true"></span> Rules
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="android-usage" @onclick="CloseNavMenu">
                    <span class="bi bi-phone-nav-menu" aria-hidden="true"></span> App Usage
                </NavLink>
            </div>
        }

        @* DEBUG ONLY - Test pages for development *@
        @{
            var isDebugBuild = false;
#if DEBUG
        isDebugBuild = true;
#endif
        }

        @if (isDebugBuild)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="rule-test" @onclick="CloseNavMenu">
                    <span class="bi bi-test-nav-menu" aria-hidden="true"></span> Test Rules
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="launch-test" @onclick="CloseNavMenu">
                    <span class="bi bi-launch-test-nav-menu" aria-hidden="true"></span> Launch Test
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool navMenuExpanded = false;

    private string? NavMenuCssClass => navMenuExpanded ? "show" : null;

    private void ToggleNavMenu()
    {
        navMenuExpanded = !navMenuExpanded;
    }

    private void CloseNavMenu()
    {
        navMenuExpanded = false;
    }
}